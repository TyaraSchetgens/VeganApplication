<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="30dp"
        android:layout_margin="20dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <!--NAAM-->
            <TextView
                android:id="@+id/tv_gebruiker_naam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="naam"
                android:paddingBottom="20dp"
                android:textSize="24sp"
                android:gravity="center"/>

            <!--LEVEL-->
            <TextView
                android:id="@+id/tv_gebruiker_level"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_gebruiker_naam"
                android:text="level"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textSize="16sp"/>

            <!--WEEK STREAK-->
            <TextView
                android:id="@+id/tv_gebruiker_weekstreak"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_gebruiker_level"
                android:text="week streak"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textSize="16sp"/>

            <!--ERVARING-->
            <ProgressBar
                android:id="@+id/ProgressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:indeterminate="false"
                android:maxHeight="10dip"
                android:minHeight="10dip"
                android:progress="50"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>