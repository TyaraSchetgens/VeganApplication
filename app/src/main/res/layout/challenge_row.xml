<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="30dp"
        android:layout_margin="20dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <!--NAAM-->
            <TextView
                android:id="@+id/tv_challenge_naam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="naam"
                android:textSize="24sp" />

            <!--BESCHRIJVING-->
            <TextView
                android:id="@+id/tv_challenge_beschrijving"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_challenge_naam"
                android:text="beschrijving"
                android:textSize="16sp" />

            <!--LEVEL-->
            <TextView
                android:id="@+id/tv_challenge_level"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_challenge_beschrijving"
                android:text="level"
                android:textSize="16sp" />

            <!--ERVARING-->
            <TextView
                android:id="@+id/tv_challenge_ervaring"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_challenge_level"
                android:text="ervaring"
                android:textSize="16sp" />

            <!--CATEGORIE-->
            <TextView
                android:id="@+id/tv_challenge_categorie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_challenge_ervaring"
                android:text="categorie"
                android:textSize="16sp" />

            <!--DAG-->
            <TextView
                android:id="@+id/tv_challenge_dag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_challenge_categorie"
                android:text="dag"
                android:textSize="16sp" />

            <!--IS QUICK CHALLENGE-->
            <TextView
                android:id="@+id/tv_challenge_quick_challenge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_challenge_dag"
                android:text="quick quick"
                android:textSize="16sp" />

            <!--HOW TO-->
            <TextView
                android:id="@+id/tv_challenge_how_to"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_challenge_quick_challenge"
                android:text="howto"
                android:textSize="16sp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>