<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="30dp"
        android:layout_margin="20dp"
        app:cardBackgroundColor="#dbfcf2">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp">

        <TextView
            android:id="@+id/weetje_beschrijving"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textStyle="italic|bold"
            android:text="@string/wist_je_dat"/>

        <TextView
            android:id="@+id/weetje_categorie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/weetje_beschrijving"
            android:textSize="16sp"
            android:text="frituurvet gebruikt wordt om schoenenvet mee te maken?"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>